<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="AppThemeCropper" parent="Base.Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="PixAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CustomActivityAnimationGallery" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_down_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down_animation</item>
    </style>

    <style name="ToolBarIcon">
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ToolBarTitle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeGallery" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimationGallery</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">false</item>
    </style>


</resources>
